generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Prize{
  id Int @id @default(autoincrement())
  name String @unique
  quantity Int @default(0)
  level Int @default(0)
  price Int @default(0)
}

model User{
  id Int @id @default(autoincrement())
  email String @unique
  cellphone String @unique
  name String
  token String?
}